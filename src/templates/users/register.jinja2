{% extends "base.jinja2" %}
{% block content %}

    <div class="container mt-md-5 border border-info rounded w-75 div-color">
        <form class="my-3" method="post" action="{{ url_for('user.register_user') }}">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <div>
                <button type="submit" class="btn btn-lg btn-block btn-info">Sign Up</button>
            </div>
        </form>
    </div>

{% endblock %}
