{% extends "base.jinja2" %}
{% block content %}
    <div class="modal-header">
        <h1>Alert<small> for {{ alert.item.name }}</small></h1>
    </div>
    <div class="card-body">
        <p>Your price limit: <strong>${{ alert.price_limit }}</strong></p>
        <p>Last price found: <strong>${{ alert.item.price }}</strong></p>
        <p class="d-inline-flex">Last checked: <strong>{{ alert.last_checked.strftime(' %d/%m/%Y - %H:%Mhrs') }}</strong>
        </p>
        <div>
            <a href="{{ alert.item.url }}" target="_blank">
                <button class="btn btn-primary btn-lg">Visit item site</button>
            </a>
            <a href="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}">
                <button class="btn btn-outline-warning btn-lg">Edit alert</button>
            </a>
            <a href="{{ url_for('alerts.check_price', alert_id=alert._id) }}">
                <button class="btn btn-warning btn-lg">Check item price!</button>
            </a>
            {% if alert.active%}
                <a href="{{ url_for('alerts.deactivate_alert', alert_id=alert._id) }}">
                    <button class="btn btn-outline-danger btn-lg float-right">Deactivate alert</button>
                </a>
            {% else %}
                <a href="{{ url_for('alerts.activate_alert', alert_id=alert._id) }}">
                    <button class="btn btn-success btn-lg">Activate alert</button>
                </a>
                <a href="{{ url_for('alerts.delete_alert', alert_id=alert._id) }}">
                    <button class="btn btn-danger btn-lg float-right">Delete alert</button>
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}