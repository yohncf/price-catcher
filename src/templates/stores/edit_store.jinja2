{% extends 'base.jinja2' %}
{% block content %}

      <div class="modal-header">
        <h1>Edit store</h1>
    </div>
    <div class="container mt-md-5 mb-2 border border-info rounded w-75 div-color">
        <br/>
        <form method="post" >
        <div class="form-group">
            <label for="name">Store Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Store Name" value="{{ store.name }}">
        </div>
        <div class="form-group">
            <label for="url">URL Prefix</label>
            <input type="text" class="form-control" id="url" name="url" placeholder="htt://www.storename.com" value="{{ store.url_prefix }}">
        </div>
        <div class="form-group">
            <label for="price_tag">Price tag name</label>
            <input type="text" class="form-control" id="price_tag" name="price_tag"
                   placeholder="span" value="{{ store.p_tag_name }}">
        </div>
        <div class="form-group">
            <label for="price_query">Price query</label>
            <input type="text" class="form-control" id="price_query" name="price_query"
                   placeholder='{ "id" : "price-now" }' value="{{ store.p_query | tojson}}">
        </div>
        <div class="form-group">
            <label for="name_tag">Products tag name</label>
            <input type="text" class="form-control" id="name_tag" name="name_tag"
                   placeholder="span" value="{{ store.n_tag_name }}">
        </div>
        <div class="form-group">
            <label for="name_query">Name query</label>
            <input type="text" class="form-control" id="name_query" name="name_query"
                   placeholder='{ "id" : "price-now" }' value="{{ store.n_query | tojson}}">
        </div>
        <div>
            <button type="submit" class="btn btn-lg btn-block btn-info">Update</button>
            <br/>
        </div>
        </form>
    </div>

{% endblock %}